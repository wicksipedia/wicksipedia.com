{
	"$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsole": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all",
			"semicolons": "always"
		}
	},
	"css": {
		"parser": { "tailwindDirectives": true },
		"formatter": { "enabled": false },
		"linter": { "enabled": false }
	},
	"files": {
		"includes": [
			"**",
			"!**/dist",
			"!**/.astro",
			"!**/public/pagefind",
			"!**/node_modules",
			"!**/*.html"
		]
	},
	"overrides": [
		{
			"includes": ["**/*.astro"],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
