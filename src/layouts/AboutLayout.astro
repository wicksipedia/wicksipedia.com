---
import type { MarkdownLayoutProps } from "astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import { SITE } from "@/config";
import Layout from "./Layout.astro";

type Props = MarkdownLayoutProps<{ title: string }>;

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header />
  <Breadcrumb />
  <main id="main-content" class="app-layout pb-12">
    <div class="animate-reveal pt-8 pb-6 mb-2 border-b border-border/50">
      <!-- Editorial section header -->
      <div class="flex items-center gap-4 mb-6">
        <span class="text-xs font-bold uppercase tracking-[0.2em] text-accent whitespace-nowrap" style="font-variant: small-caps;">About the Author</span>
        <span class="flex-1 h-px bg-border/60"></span>
      </div>
      <h1 class="font-prose text-3xl font-bold italic tracking-tight text-foreground sm:text-4xl lg:text-5xl">
        {frontmatter.title}
      </h1>
    </div>
    <section
      id="about"
      class="animate-reveal-delay-1 app-prose mt-8 max-w-app font-prose prose-img:border-0 prose-img:rounded-lg prose-img:shadow-sm"
    >
      <slot />
    </section>
  </main>
  <Footer />
</Layout>
