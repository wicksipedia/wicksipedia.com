---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="app-layout flex flex-1 items-center justify-center"
  >
    <div class="mb-14 flex flex-col items-center justify-center">
      <h1 class="text-gradient text-9xl font-bold">404</h1>
      <span aria-hidden="true" class="mt-2 text-2xl text-accent">¯\_(ツ)_/¯</span>
      <p class="mt-4 text-2xl text-foreground/70 sm:text-3xl">Page Not Found</p>
      <LinkButton
        href="/"
        class="btn-glow my-6 rounded-xl bg-accent px-6 py-3 font-medium text-white"
      >
        Go back home
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>
