---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";
import avatarImage from "@/assets/images/avatar.png";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <section id="hero" class="animate-reveal overflow-hidden bg-hero-bg transition-[background] duration-300">
    <div class="app-layout">
      <div class="flex flex-col items-center gap-6 py-8 sm:py-10 md:flex-row md:items-end md:justify-between md:gap-8 md:py-0">
        <div class="text-center md:flex-1 md:py-16 md:text-left lg:py-20 xl:py-24">
          <Image
            src={avatarImage}
            alt="Matt Wicks"
            width={160}
            height={160}
            class="mx-auto block size-35 rounded-full object-cover object-top sm:size-40 md:hidden"
            loading="eager"
            decoding="async"
          />
          <p class="mt-4 text-sm font-semibold uppercase tracking-widest text-hero-accent md:mt-0">
            Solution Architect at{" "}
            <a
              href="https://ssw.com.au/people/matt-wicks/"
              target="_blank"
              rel="noopener noreferrer"
              class="underline decoration-dashed underline-offset-4 hover:decoration-solid"
            >
              SSW
            </a>
          </p>
          <h1 class="mt-3 text-4xl font-extrabold tracking-tight text-hero-text sm:text-5xl lg:text-6xl xl:text-7xl">
            Matt Wicks
          </h1>
          <p class="mx-auto mt-4 max-w-lg text-base leading-relaxed text-hero-text-muted sm:text-lg md:mx-0 md:text-xl">
            Exploring CI/CD, DevOps, cloud-native architecture, and clean code â€”
            sharing practical tips and hard-won lessons from the trenches.
          </p>
          {
            SOCIALS.length > 0 && (
              <div class="mt-5 [&_svg]:stroke-hero-social [&_svg]:hover:stroke-hero-accent">
                <Socials />
              </div>
            )
          }
        </div>
        <div class="relative hidden md:block md:shrink-0 after:content-[''] after:absolute after:bottom-0 after:inset-x-0 after:h-[40%] after:pointer-events-none after:bg-gradient-to-t after:from-hero-bg after:to-transparent after:transition-[background] after:duration-300">
          <Image
            src={avatarImage}
            alt="Matt Wicks"
            widths={[320, 420, 480]}
            sizes="(max-width: 767px) 160px, (max-width: 1023px) 320px, (max-width: 1279px) 420px, 480px"
            class="hero-avatar"
            loading="eager"
            decoding="async"
          />
        </div>
      </div>
    </div>
  </section>
  <main id="main-content" data-layout="index" class="app-layout">
    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "animate-reveal-delay-1 pt-12 pb-8",
            { "border-b border-border/50": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold tracking-wide text-foreground after:content-[''] after:block after:w-12 after:h-0.75 after:mt-2 after:rounded-full after:bg-accent">
            Featured
          </h2>
          <ul>
            {featuredPosts.map((data) => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="animate-reveal-delay-2 pt-12 pb-8">
          <h2 class="text-2xl font-semibold tracking-wide text-foreground after:content-[''] after:block after:w-12 after:h-0.75 after:mt-2 after:rounded-full after:bg-accent">
            Recent Posts
          </h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />,
            )}
          </ul>
        </section>
      )
    }

    <div class="animate-reveal-delay-3 my-8 text-center">
      <a
        href="/blog/"
        class:list={[
          "relative overflow-hidden inline-flex items-center gap-2",
          "rounded-xl bg-accent px-8 py-3.5",
          "font-semibold text-white transition-all duration-200",
          "hover:brightness-110",
          "after:content-[''] after:absolute after:inset-0 after:rounded-[inherit] after:opacity-0 after:transition-opacity after:duration-300 after:[box-shadow:0_0_24px_var(--accent)] hover:after:opacity-50",
        ]}
      >
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </a>
    </div>
  </main>
  <Footer />
</Layout>


<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
