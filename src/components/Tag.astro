---
import IconHash from "@/assets/icons/IconHash.svg";

type Props = {
	tag: string;
	tagName: string;
	size?: "sm" | "lg";
};

const { tag, tagName, size = "lg" } = Astro.props;
---

<li>
  <a
    href={`/tags/${tag}/`}
    transition:name={tag}
    class:list={[
      "inline-flex items-center gap-0.5 rounded-full",
      "border border-accent/30 bg-accent/5 px-3 py-1",
      "text-accent transition-all duration-150",
      "hover:border-accent/60 hover:bg-accent/15",
      "focus-visible:border-none focus-visible:text-accent",
      { "text-sm": size === "sm" },
      { "text-base": size === "lg" },
    ]}
  >
    <IconHash
      class:list={[
        "opacity-70",
        { "size-4": size === "lg" },
        { "size-3.5": size === "sm" },
      ]}
    />
    {tagName}
  </a>
</li>
