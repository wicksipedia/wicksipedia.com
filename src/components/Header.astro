---
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconX from "@/assets/icons/IconX.svg";
import { SITE } from "@/config";
const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
	pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
	const currentPathArray = currentPath.split("/").filter((p) => p.trim());
	const pathArray = path.split("/").filter((p) => p.trim());

	return currentPath === path || currentPathArray[0] === pathArray[0];
};

const navLink =
	"block px-3 py-2 text-[0.8rem] font-semibold uppercase tracking-[0.08em] text-foreground/75 rounded-lg transition-all duration-150 hover:text-accent hover:bg-accent/8 max-sm:text-center max-sm:py-3";
const navActive =
	"text-accent after:content-[''] after:block after:h-0.5 after:mt-0.5 after:rounded-full after:bg-accent";
const iconBtn =
	"flex items-center justify-center size-9 rounded-lg text-foreground/75 transition-all duration-150 hover:text-accent hover:bg-accent/10";
---

<a
  id="skip-to-content"
  href="#main-content"
  class="absolute start-16 -top-full z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
>
  Skip to content
</a>

<header class="sticky top-0 z-40 bg-background/82 backdrop-blur-lg backdrop-saturate-[1.8] border-b border-border/50 transition-[background,border-color] duration-300">
  <div class="app-layout">
    <div
      id="top-nav-wrap"
      class="flex items-center justify-between py-4 sm:py-5"
    >
      <a
        href="/"
        class="group relative flex items-baseline gap-1.5 whitespace-nowrap"
      >
        <span class="font-prose text-xl font-bold italic tracking-tight text-foreground sm:text-2xl">
          {SITE.title}
        </span>
        <span
          class:list={[
            "relative inline-block size-2 rounded-full bg-accent mb-0.5 will-change-transform animate-[dot-squish_0.8s_infinite]",
            "after:content-[''] after:absolute after:-bottom-0.75 after:left-1/2 after:w-1.5 after:h-0.5 after:rounded-full after:bg-foreground/15 after:-translate-x-1/2 after:animate-[dot-shadow-squish_0.8s_infinite]",
          ]}
        ></span>
      </a>

      <nav id="nav-menu" class="flex items-center">
        <button
          id="menu-btn"
          class="focus-outline p-2 sm:hidden"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconX id="close-icon" class="hidden" />
          <IconMenuDeep id="menu-icon" />
        </button>
        <ul
          id="menu-items"
          class:list={[
            "max-sm:hidden",
            "max-sm:absolute max-sm:top-full max-sm:inset-x-0 max-sm:z-50 max-sm:grid max-sm:grid-cols-2 max-sm:gap-1 max-sm:px-4 max-sm:py-3 max-sm:bg-background/95 max-sm:backdrop-blur-[16px] max-sm:backdrop-saturate-[1.8] max-sm:border-b max-sm:border-border/50",
            "sm:flex sm:items-center sm:gap-1",
          ]}
        >
          <li>
            <a
              href="/blog"
              class:list={[navLink, { [navActive]: isActive("/blog") }]}
            >
              Blog
            </a>
          </li>
          <li>
            <a
              href="/tags"
              class:list={[navLink, { [navActive]: isActive("/tags") }]}
            >
              Tags
            </a>
          </li>
          <li>
            <a
              href="/about"
              class:list={[navLink, { [navActive]: isActive("/about") }]}
            >
              About
            </a>
          </li>
          {
            SITE.showArchives && (
              <li>
                <a
                  href="/archives"
                  class:list={[
                    navLink,
                    "sm:flex sm:items-center sm:justify-center",
                    {
                      [navActive]: isActive("/archives"),
                    },
                  ]}
                  title="Archives"
                  aria-label="archives"
                >
                  <IconArchive class="hidden sm:inline-block" />
                  <span class="sm:sr-only">Archives</span>
                </a>
              </li>
            )
          }

          <li class="hidden h-5 w-px bg-border/60 sm:block mx-1" aria-hidden="true"></li>
          <li class="flex items-center justify-center">
            <button
              id="cmd-k-trigger"
              class="group flex h-9 items-center gap-1 rounded-lg px-2 text-foreground/75 transition-all duration-150 hover:bg-accent/10 hover:text-accent"
              title="Search (⌘K)"
              aria-label="Search"
              aria-keyshortcuts="Meta+k Control+k"
            >
              <IconSearch class="size-4 shrink-0" />
              <span class="hidden sm:flex items-center gap-px">
                <kbd class="rounded border border-border/60 px-1 py-px font-mono text-[0.6rem] text-foreground/35 transition-colors group-hover:border-accent/30 group-hover:text-accent/60">⌘</kbd>
                <kbd class="rounded border border-border/60 px-1 py-px font-mono text-[0.6rem] text-foreground/35 transition-colors group-hover:border-accent/30 group-hover:text-accent/60">K</kbd>
              </span>
            </button>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li class="flex items-center justify-center">
                <button
                  id="theme-btn"
                  class:list={[iconBtn, "relative"]}
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("max-sm:hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
