---
import type { CollectionEntry } from "astro:content";
import type { Page } from "astro";
import IconArrowLeft from "@/assets/icons/IconArrowLeft.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import LinkButton from "./LinkButton.astro";

type Props = {
	page: Page<CollectionEntry<"blog">>;
};

const { page } = Astro.props;
---

{
  page.lastPage > 1 && (
    <nav
      class="app-layout mt-auto mb-8"
      role="navigation"
      aria-label="Pagination Navigation"
    >
      <div class="border-0 border-t border-border/40 mb-6"></div>
      <div class="flex items-center justify-center gap-6">
        <LinkButton
          disabled={!page.url.prev}
          href={page.url.prev as string}
          class:list={[
            "inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.15em] text-foreground/50 transition-all duration-300 hover:text-accent hover:tracking-[0.2em] select-none",
            { "opacity-30 pointer-events-none": !page.url.prev },
          ]}
          aria-label="Goto Previous Page"
        >
          <IconArrowLeft class="inline-block size-4 rtl:rotate-180" />
          Prev
        </LinkButton>
        <span class="text-xs font-bold uppercase tracking-[0.2em] text-accent" style="font-variant: small-caps;">
          {page.currentPage} of {page.lastPage}
        </span>
        <LinkButton
          disabled={!page.url.next}
          href={page.url.next as string}
          class:list={[
            "inline-flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.15em] text-foreground/50 transition-all duration-300 hover:text-accent hover:tracking-[0.2em] select-none",
            { "opacity-30 pointer-events-none": !page.url.next },
          ]}
          aria-label="Goto Next Page"
        >
          Next
          <IconArrowRight class="inline-block size-4 rtl:rotate-180" />
        </LinkButton>
      </div>
    </nav>
  )
}
