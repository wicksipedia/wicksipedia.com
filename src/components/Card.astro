---
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@/utils/slugify";
import { getPath } from "@/utils/getPath";
import Datetime from "./Datetime.astro";
import IconHash from "@/assets/icons/IconHash.svg";

type Props = {
  variant?: "h2" | "h3";
} & CollectionEntry<"blog">;

const { variant: Heading = "h2", id, data, filePath } = Astro.props;

const { title, description, tags, ...props } = data;
---

<li
  class:list={[
    "group relative card-hover-lift card-border-left",
    "my-4 rounded-xl border border-border/60 bg-muted/20 p-5",
    "transition-all duration-200 cursor-pointer",
    "hover:border-border hover:bg-muted/40",
  ]}
>
  <a
    href={getPath(id, filePath)}
    class:list={[
      "inline-block text-lg font-semibold text-foreground",
      "decoration-accent underline-offset-4 group-hover:text-accent group-hover:underline",
      "focus-visible:no-underline focus-visible:underline-offset-0",
      "after:absolute after:inset-0 after:content-['']",
    ]}
  >
    <Heading
      style={{ viewTransitionName: slugifyStr(title.replaceAll(".", "-")) }}
    >
      {title}
    </Heading>
  </a>
  <Datetime {...props} />
  <p class="text-foreground/70">{description}</p>
  {
    tags.length > 0 && (
      <ul class="relative z-10 mt-3 flex flex-wrap gap-1.5">
        {tags.map((tag) => (
          <li>
            <a
              href={`/tags/${slugifyStr(tag)}/`}
              class:list={[
                "inline-flex items-center gap-0.5 rounded-full",
                "border border-accent/30 bg-accent/5 px-2.5 py-0.5 text-xs text-accent",
                "transition-all duration-150",
                "hover:border-accent/60 hover:bg-accent/15",
              ]}
            >
              <IconHash class="size-3 opacity-70" />
              {tag}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</li>
