---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import IconHash from "@/assets/icons/IconHash.svg";
import { getPath } from "@/utils/getPath";
import { slugifyStr } from "@/utils/slugify";
import Datetime from "./Datetime.astro";

type Props = {
	variant?: "h2" | "h3";
} & CollectionEntry<"blog">;

const { variant: Heading = "h2", id, data, filePath } = Astro.props;

const { title, description, ogImage, tags, ...props } = data;
---

<li
  class:list={[
    "group relative my-4 overflow-hidden rounded-xl border border-border/40 bg-muted/20",
    "transition-all duration-300",
    "hover:bg-muted/40 hover:border-border/70 hover:-translate-y-0.5 hover:shadow-lg hover:shadow-accent/5",
  ]}
>
  {/* Faded background image */}
  {ogImage && (
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      {typeof ogImage === "string" ? (
        <img
          src={ogImage}
          alt=""
          loading="lazy"
          class="absolute inset-0 min-h-full min-w-full object-cover opacity-[0.22] transition-opacity duration-500 group-hover:opacity-30 dark:opacity-25 dark:group-hover:opacity-35"
        />
      ) : (
        <Image
          src={ogImage}
          alt=""
          widths={[320, 480]}
          sizes="(max-width: 640px) 100vw, 50vw"
          loading="lazy"
          class="absolute inset-0 min-h-full min-w-full object-cover opacity-[0.22] transition-opacity duration-500 group-hover:opacity-30 dark:opacity-25 dark:group-hover:opacity-35"
        />
      )}
      {/* Directional fade â€” image bleeds from right, fades to left */}
      <div class="absolute inset-0 bg-linear-to-r from-muted via-(--muted)/80 to-transparent"></div>
    </div>
  )}
  {/* Card content */}
  <div class="relative z-10 p-5">
    <a
      href={getPath(id, filePath)}
      class:list={[
        "block no-underline",
        "after:absolute after:inset-0 after:content-['']",
      ]}
    >
      <Heading
        style={{ viewTransitionName: slugifyStr(title.replaceAll(".", "-")) }}
        class="font-prose text-xl font-bold leading-snug text-foreground transition-colors duration-200 group-hover:text-accent"
      >
        {title}
      </Heading>
    </a>
    <div class="mt-3">
      <Datetime {...props} />
    </div>
    <p class="mt-2 font-prose text-sm leading-relaxed text-foreground/70 line-clamp-3">{description}</p>
    {
      tags.length > 0 && (
        <ul class="relative z-10 mt-3 flex flex-wrap gap-1.5">
          {tags.map((tag) => (
            <li>
              <a
                href={`/tags/${slugifyStr(tag)}/`}
                class:list={[
                  "inline-flex items-center gap-0.5 rounded-full",
                  "border border-accent/30 bg-accent/5 px-2.5 py-0.5 text-xs text-accent",
                  "transition-all duration-150 no-underline",
                  "hover:border-accent/60 hover:bg-accent/15",
                ]}
              >
                <IconHash class="size-3 opacity-70" />
                {tag}
              </a>
            </li>
          ))}
        </ul>
      )
    }
  </div>
</li>
